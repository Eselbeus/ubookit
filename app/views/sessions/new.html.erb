<div class ='login'>
  <%= form_tag '/login', method: :post do%>
  <div class = 'inputbox'>
    <%= label_tag :email %>
    <%= text_field_tag :email  %> <br>
  </div>
  <div class = 'inputbox'>
    <%= label_tag :password %>
    <%= password_field_tag :password  %> <br>
  </div>
    <%= submit_tag "Login" %> <br>
  <% end %>
</div>

