
<div class ='login'>
  <%= form_tag '/login', method: :post do%>
  <div class = 'inputbox'>
    <input type="text" name="email" onfocus="if(this.value == 'Email') { this.value = ''; }" value="Email"/>
     <br>
  </div>
  <div class = 'inputbox'>
    <input type="password" name="password" onfocus="if(this.value == 'Password') { this.value = ''; }" value="Password"/>
    <br>
  </div>
    <%= submit_tag "Login" %> <br>
  <% end %>
</div>
